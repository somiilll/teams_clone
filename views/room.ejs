</head>
<body>
    <div class="team">
    <div class="team_left">
        <div class="main_videos">
            <div id= "video-grid">

            </div>
        </div>
        <div class="team_control"> 
            <div class="team_control_block">
                <div onclick = "muteUnmute()" class="team_control_button team_mute_button">
                    <i class="fas fa-microphone"></i>
                    <span>Mute</span>
                </div>
                <div onclick="playStop()" class="team_control_button team_video_button">
                    <i class="fas fa-video"></i>
                    <span>Camera</span>
                </div>
            </div>
            <div class="team_control_block">
                <div onclick="screen()" class="team_control_button">
                    <i class="fas fa-share-square"></i>
                    <span>Share Screen</span>
                </div>
                </div>
                <!-- <div class="team_control_button">
                    <i class="fas fa-comment"></i>
                    <span>Chat</span>
                </div>
            </div> -->
            <div class="team_control_block">
                <div class="team_control_button">
                    <span class="leave">Leave Meeting</span>
                </div>
            </div>
        </div>
    </div>
    <div class="team_right">
        <div class="team_header">
            <h5>CHAT!</h5>
        </div>
        <div class="team_chat_window">
            <ul class="messages">

            </ul>
        </div>
        <div class="team_message_container">
            <input id="chat_message" type="text" placeholder="Type Here...">
        </div>
    </div>
    </div>
    <script src="script.js"></script>
</body>
</html>